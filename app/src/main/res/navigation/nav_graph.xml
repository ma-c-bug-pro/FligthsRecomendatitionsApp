<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.flightsrecomendationsapp.ui.mainscreen.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_popularOfferFragment"
            app:destination="@id/popularOfferFragment" />
    </fragment>
    <fragment
        android:id="@+id/popularOfferFragment"
        android:name="com.example.flightsrecomendationsapp.ui.offersscreen.PopularOfferFragment"
        android:label="PopularOfferFragment">
        <argument
            android:name="location"
            app:argType="string"
            android:defaultValue="-1" />
    </fragment>
</navigation>